@model BuckyBook.Models.Category

@{
    ViewData["Title"] = "Create";
}

    <div class="">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2> 
        </div>
    </div>
    <br/>
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
